<%= @preferences.each do | preference | %>
  <h2>Preferences</h2>
    <ul>
      <li>Song Sort Order: <%= preference.song_sort_order %></li>
      <li>Artist Sort Order: <%= preference.artist_sort_order %></li>
      <li>Create Songs Allowed: <%= preference.allow_create_songs ? "True" : "False" %></li>
      <li>Create Artists Allowed: <%= preference.allow_create_artists ? "True" : "False" %></li>
    </ul>
<% end %>
